local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()

local Window = OrionLib:MakeWindow({Name = "Koro Hub - ðŸ”ª Survive the Killer! (Beta)", IntroText = "Koro Hub", HidePremium = true, SaveConfig = true, ConfigFolder = "Koro Hub"})

-- Values

_G.AutoTeleportSave = false

_G.KillerESP = false

_G.PlayerESP = false

_G.AutoSlash = false

_G.AutoFarmPlayer = false

local player = nil

local Killer = nil

local State = nil

-- Funcions

function KillerEsp()

    if _G.KillerESP == true then
        local ESP = loadstring(game:HttpGet("https://kiriot22.com/releases/ESP.lua"))()

        ESP.Players = false
        ESP.Boxes = true
        ESP.Names = true
        ESP:Toggle(true)
    
        for _, v in pairs(game.Players:GetPlayers()) do
            if v.Team.Name == "Killer" and v ~= game.Players.LocalPlayer then
                    ESP:AddObjectListener(v.Character, { -- Object Path, For example: Workspace.ThisFolder
                    Name = "HumanoidRootPart", --Object name inside of the path, for example: Workspace.ThisFolder.Item_1
                    CustomName = "Killer: " .. v.Name, -- Name you want to be displayed
                    Color = Color3.fromRGB(255, 0, 0), -- Color
                    IsEnabled = "KillerESP" -- Any name, has to be the same as the last line: ESP.TheNameYouWant
                })
                ESP.KillerESP = true
            end
        end
    
        -- -- Make ESP Work
        -- while _G.KillerESP == true do
        --     task.wait()
        --     ESP:Toggle(true)
        --     ESP.KillerESP = true
        -- end
    
        -- -- Make ESP Stop
        -- while _G.KillerESP == false do
        --     task.wait()
        --     ESP:Toggle(false)
        --     ESP.KillerESP = false
        --  end 
    end
end

function PlayerEsp()

    if _G.PlayerESP == true then
        local ESP = loadstring(game:HttpGet("https://kiriot22.com/releases/ESP.lua"))()

        ESP.Players = false
        ESP.Boxes = true
        ESP.Names = true
        ESP:Toggle(true)
    
        for _, v in pairs(game.Players:GetPlayers()) do
            if v.Team.Name == "Survivor" and v ~= game.Players.LocalPlayer then
                    ESP:AddObjectListener(v.Character, { -- Object Path, For example: Workspace.ThisFolder
                    Name = "HumanoidRootPart", --Object name inside of the path, for example: Workspace.ThisFolder.Item_1
                    CustomName = "Survivor: " .. v.Name, -- Name you want to be displayed
                    Color = Color3.fromRGB(0, 200, 255), -- Color
                    IsEnabled = "PlayerESP" -- Any name, has to be the same as the last line: ESP.TheNameYouWant
                })
                ESP.PlayerESP = true
            end
        end

    -- while true do
    --     task.wait()
    
    --     -- Make ESP Work
    --     while _G.PlayerESP == true do
    --         task.wait()
    --         ESP.PlayerESP = true
    --     end
    
    --     -- Make ESP Stop
    --     while _G.PlayerESP == false do
    --         task.wait()
    --         ESP.PlayerESP = false
    --      end
    -- end
    end
end

function LiitleWork()
    State = false

    _G.AutoTeleportSave = false

    game.Players.LocalPlayer.Character.HumanoidRootPart.Anchored = false

    OrionLib:MakeNotification({
        Name = "System",
        Content = "Please Turn Off The Auto Teleport To Save Place Toggle.",
        Image = "rbxassetid://4483345998",
        Time = 5
    })
end

function Updater()
    local a = _G.AutoTeleportSave

    if a == false then
        State = false
    end

    if a == true then
        State = true
    end
end

function AutoGoSavePlaces()

    if State == true then
        for _, v in pairs(game.Players:GetPlayers()) do
            if v.Team.Name == "Killer" then
                Killer = v

                repeat
                    wait()
                    Updater()
        
                    game.Players.LocalPlayer.Character.HumanoidRootPart.Anchored = true
        
                    game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = v.Character.HumanoidRootPart.CFrame * CFrame.new(0, 20, 0)
                until State == false or game.Players.LocalPlayer.Character.Humanoid.Health == 0
            end
        end
    end
end

function AutoFarmKnife()
    while _G.AutoSlash == true do
        wait()
        game:GetService("Players").LocalPlayer.Character.Knife.KnifeSlashEvent:FireServer()
    end
end

function AutoFarm()
    while _G.AutoFarmPlayer == true do
        wait()
        for _, v in pairs(game.Players:GetPlayers()) do
            if v.Team == "Survivor" and v ~= game.Players.LocalPlayer and player ~= v then
                player = v
                game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = player.Character.HumanoidRootPart.CFrame
            end
        end
    end
end

-- Tabs

local HTap = Window:MakeTab({
	Name = "Home",
	Icon = "rbxassetid://4483345998",
	PremiumOnly = false
})

-- HomeTab

HTap:AddParagraph("Updates","1 - Empty")

HTap:AddParagraph("Credits","This Script Is Made By OKau")

HTap:AddParagraph("Bugs","If You Get Any Bug Please Report In Our Discord (https://discord.gg/jgERszqAXk)")

-- MainTab

local MTab = Window:MakeTab({
	Name = "Main",
	Icon = "rbxassetid://4483345998",
	PremiumOnly = false
})

local Section = MTab:AddSection({
	Name = "Survivor"
})

MTab:AddToggle({
	Name = "Auto Teleprot To Safe Place",
	Default = false,
	Callback = function(Value)
		AutoGoSavePlaces()
        _G.AutoTeleportSave = Value
	end    
})

MTab:AddButton({
	Name = "Disable Teleport",
	Callback = function()
        LiitleWork()
  	end    
})

local Section = MTab:AddSection({
	Name = "Killer"
})

MTab:AddToggle({
	Name = "Auto Slash",
	Default = false,
	Callback = function(Value)
		AutoFarmKnife()
        _G.AutoSlash = Value
	end
})

MTab:AddToggle({
	Name = "Auto Kill All Players",
	Default = false,
	Callback = function(Value)
		AutoFarm()
        _G.AutoFarmPlayer = Value
	end
})

local Section = MTab:AddSection({
	Name = "ESP"
})

MTab:AddToggle({
	Name = "ESP Killer",
	Default = false,
	Callback = function(Value)
        KillerEsp()
        _G.KillerESP = Value
	end
})

MTab:AddToggle({
	Name = "ESP Players",
	Default = false,
	Callback = function(Value)
        PlayerEsp()
        _G.PlayerESP = Value
	end
})

-- PlayerTab

local PTab = Window:MakeTab({
	Name = "Player",
	Icon = "rbxassetid://4483345998",
	PremiumOnly = false
})

PTab:AddSlider({
	Name = "WalkSpeed",
	Min = 0,
	Max = 150,
	Default = 16,
	Color = Color3.fromRGB(255,0,0),
	Increment = 1,
	ValueName = "Value",
	Callback = function(Value)
		game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = Value
	end    
})

game.Players.LocalPlayer.Character.Humanoid.UseJumpPower = true

PTab:AddSlider({
	Name = "JumpPower",
	Min = 0,
	Max = 180,
	Default = 50,
	Color = Color3.fromRGB(255,0,0),
	Increment = 1,
	ValueName = "Value",
	Callback = function(Value)
		game.Players.LocalPlayer.Character.Humanoid.JumpPower = Value
	end    
})
